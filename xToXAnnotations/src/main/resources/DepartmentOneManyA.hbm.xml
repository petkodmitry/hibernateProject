<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
        default-lazy="true"
        package="by.academy.it.pojos4"
        auto-import="false"
        catalog="my_db3"
>
    <class name="by.academy.it.pojos4.DepartmentOneManyA" table="T_DEP_ONEMANY">
        <id name="did" type="int">
            <generator class="increment"/>
        </id>
        <property name="depName" column="F_DEPNAME" type="string"/>
        <set name="employees" table="T_PERSON_ONEMANY" inverse="true" fetch="select" lazy="true">
            <key column="F_DID" not-null="true"/>
            <one-to-many class="by.academy.it.pojos4.EmployeeOneManyA"/>
        </set>
    </class>
</hibernate-mapping>
