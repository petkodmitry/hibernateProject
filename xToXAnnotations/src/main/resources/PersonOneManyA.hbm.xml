<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
        default-lazy="true"
        package="by.academy.it.pojos4"
        auto-import="false"
        catalog="my_db3"
>
    <class name="by.academy.it.pojos4.EmployeeOneManyA" table="T_PERSON_ONEMANY">
        <id name="eid" type="int" column="F_EID">
            <generator class="increment"/>
        </id>
        <property name="name" column="F_NAME" type="string"/>
        <property name="surname" column="F_SURNAME" type="string"/>
        <many-to-one name="department" class="by.academy.it.pojos4.DepartmentOneManyA" column="F_DID" fetch="select"
                     cascade="save-update"/>
    </class>
</hibernate-mapping>
